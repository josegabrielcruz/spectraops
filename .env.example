# ──────────────────────────────────────────────
# SpectraOps environment variables
# Copy this file to .env and fill in values.
# ──────────────────────────────────────────────

# ── Core Engine API ──────────────────────────
# Port the API server listens on (default: 3000)
PORT=3000

# PostgreSQL connection string
DATABASE_URL=postgres://postgres:postgres@localhost:5432/spectraops

# Log level: trace | debug | info | warn | error | fatal (default: info)
LOG_LEVEL=info

# Node environment: development | production
NODE_ENV=development

# CORS: comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Reverse proxy — set to 'true' behind nginx / cloud LB / Docker
# TRUST_PROXY=true

# Error data retention — errors older than this are automatically purged (default: 90)
# ERROR_RETENTION_DAYS=90

# PostgreSQL connection pool max size (default: 20)
# PG_POOL_MAX=20

# ── Dashboard (Vite) ────────────────────────
# URL the dashboard uses to call the API (build-time only).
# Leave UNSET for local dev (Vite proxy handles it).
# Set for production: VITE_API_URL=https://api.your-domain.com
# VITE_API_URL=
