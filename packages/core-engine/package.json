{
  "name": "core-engine",
  "version": "1.0.0",
  "description": "SpectraOps Core Engine API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "test": "vitest run",
    "migrate:up": "node-pg-migrate up --tsconfig tsconfig.json --migration-file-language ts -m migrations",
    "migrate:down": "node-pg-migrate down --tsconfig tsconfig.json --migration-file-language ts -m migrations",
    "migrate:create": "node-pg-migrate create --tsconfig tsconfig.json --migration-file-language ts -m migrations"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "packageManager": "pnpm@10.29.3",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "helmet": "^8.1.0",
    "node-pg-migrate": "^7.9.0",
    "pg": "^8.13.0",
    "pino": "^9.6.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^25.2.3",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "pino-pretty": "^13.0.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.2.0"
  }
}
